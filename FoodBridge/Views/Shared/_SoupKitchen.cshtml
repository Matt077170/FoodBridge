<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Organization Registration</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;900&display=swap" rel="stylesheet">
    <style>

        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .soup-kitchen-container {
            padding: 20px;
        }

        .soup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            height: 60px;
        }

        .nav a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
        }

        .account-btn {
            background: #FFA07A;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            color: white;
            cursor: pointer;
        }

        .title-section {
            text-align: center;
            margin: 40px 0 20px;
        }

            .title-section h2 {
                font-size: 2rem;
                font-weight: bold;
            }

                .title-section h2 span {
                    color: #4CAF50;
                }

        .search-bar {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

            .search-bar input, .search-bar select {
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .search-bar button {
                padding: 10px 20px;
                background-color: #333;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .kitchen-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 20px;
            padding: 20px 0;
        }

        .kitchen-card {
            text-align: center;
            border: 1px solid #eee;
            border-radius: 10px;
            padding: 10px;
            transition: transform 0.2s;
            background-color: #fff;
        }

            .kitchen-card img {
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-radius: 10px;
            }

            .kitchen-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .footer {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            background: #f9f9f9;
            margin-top: 40px;
        }

        .footer-logo {
            height: 50px;
        }

        .footer-right button {
            margin: 5px 0;
            padding: 8px 16px;
            background-color: #FFA07A;
            border: none;
            color: white;
            border-radius: 6px;
            cursor: pointer;
        }

        /* Modal base */
        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }

        .model-content {
            background-color: #fff;
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            position: relative;
        }

            .model-content img {
                width: 100%;
                border-radius: 10px;
                margin-bottom: 15px;
                object-fit: cover;
            }

            .model-content h2 {
                margin-bottom: 15px;
                font-size: 24px;
            }

        .donate-btn {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
        }

      
        .close {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 30px;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <div class="container body-content">

        @RenderBody()


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
