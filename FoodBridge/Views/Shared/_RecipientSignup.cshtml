<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodBridge</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Raleway:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #ffffff;
        }

        header {
            background: #ffffff;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #ccc;
        }

        .nav {
            display: flex;
            gap: 20px;
            font-weight: bold;
        }

            .nav a {
                text-decoration: none;
                color: #555;
            }

        .dropdown-nav {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

            .dropdown > a {
                text-decoration: none;
                padding: 10px;
                color: #333;
                font-weight: bold;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
            z-index: 1;
            flex-direction: column;
        }

            .dropdown-content a {
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                color: #333;
                font-size: 14px;
            }

                .dropdown-content a:hover {
                    background-color: #f0f0f0;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .account-button {
            background-color: #fbbfa4;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: bold;
            color: white;
        }

        .signup-form-section {
            padding: 40px 20px;
            max-width: 1200px;
            margin: auto;
        }

            .signup-form-section h2 {
                color: #f28b54;
                font-family: 'Raleway', sans-serif;
            }

            .signup-form-section p {
                font-size: 16px;
                margin-bottom: 20px;
            }

            .signup-form-section h3 {
                color: #1f4522;
                font-size: 28px;
                font-weight: 800;
                margin-bottom: 20px;
                text-align: right;
            }

        .signup-box {
            background: linear-gradient(135deg, #fbc5a9, #f9a46f);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border: 1px solid #000;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

            .signup-box label {
                font-weight: bold;
                font-size: 12px;
                display: block;
                margin-bottom: 5px;
            }

            .signup-box input,
            .signup-box select {
                width: 100%;
                padding: 8px;
                border-radius: 5px;
                border: 1px solid #ccc;
                box-sizing: border-box;
            }

        .dob-container {
            display: flex;
            gap: 5px;
        }

        .submit-section {
            text-align: center;
            margin-top: 20px;
        }

            .submit-section input[type="checkbox"] {
                margin-right: 10px;
            }

            .submit-section button {
                background-color: #7ca86f;
                border: none;
                padding: 12px 30px;
                font-size: 18px;
                font-weight: bold;
                color: white;
                border-radius: 10px;
                cursor: pointer;
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <div class="container body-content">

        @RenderBody()


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>


