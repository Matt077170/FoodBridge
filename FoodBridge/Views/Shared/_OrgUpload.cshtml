<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Organization Uploaded</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            padding: 15px 50px;
            box-shadow: 0 1px 5px rgba(0,0,0,0.1);
        }

            header img {
                height: 50px;
            }

        nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #4d4d4d;
            font-weight: 500;
        }

        .account-btn {
            background-color: #ffbb9c;
            padding: 8px 20px;
            border-radius: 20px;
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        .container {
            max-width: 1100px;
            margin: 30px auto;
            background: white;
            padding: 30px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .thank-you {
            font-size: 20px;
            color: #d97706;
            margin-bottom: 10px;
        }

        .waiting {
            color: red;
            font-style: italic;
            font-size: 14px;
        }

        .org-info {
            margin: 20px 0;
        }

            .org-info h2 {
                color: #166534;
                margin: 0;
            }

        .info-columns {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            font-size: 14px;
        }

        .images-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
        }

            .images-grid img {
                width: 140px;
                height: 140px;
                object-fit: cover;
                border-radius: 5px;
                border: 1px solid #ccc;
            }
    </style>
</head>
<body>
    <div class="container body-content">

        @RenderBody()


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
