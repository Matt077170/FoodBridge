<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FoodBridge</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Raleway:wght@700&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Holy-Scripts/Module.js"></script>
    <script src="~/Scripts/Holy-Scripts/Controller.js"></script>
    <script src="~/Scripts/Holy-Scripts/Service.js"></script>




    <style>
        body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #f5f5f5;
        }

        header {
            background: #ffffff;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #ccc;
        }

        .nav {
            display: flex;
            gap: 20px;
            font-weight: bold;
        }

            .nav a {
                text-decoration: none;
                color: #555;
            }

        .dropdown-nav {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

            .dropdown > a {
                text-decoration: none;
                padding: 10px;
                color: #333;
                font-weight: bold;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
            z-index: 1;
            flex-direction: column;
        }

            .dropdown-content a {
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                color: #333;
                font-size: 14px;
            }

                .dropdown-content a:hover {
                    background-color: #f0f0f0;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Button appearance */
        .account-button {
            padding: 10px 15px;
            background-color: transparent;
            border: none;
            font-weight: bold;
            cursor: pointer;
            color: #333;
        }

        /* Dropdown content styling */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 4px 8px rgba(0,0,0,0.1);
            z-index: 1000;
        }

            .dropdown-content a {
                display: block;
                padding: 10px 15px;
                text-decoration: none;
                color: #333;
                font-size: 14px;
            }

                .dropdown-content a:hover {
                    background-color: #f0f0f0;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .account-dropdown {
            margin-left: auto;
        }

        .account-button {
            background-color: #fbbfa4;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: bold;
            color: white;
        }

        .main {
            padding: 40px 20px;
            text-align: center;
        }

            .main h1 {
                font-family: 'Raleway', sans-serif;
                color: #2d6830;
            }

            .main p {
                max-width: 700px;
                margin: auto;
                font-size: 18px;
            }

        .signup-section {
            margin-top: 40px;
            background: #fff;
            padding: 20px;
            border-top: 2px solid #000;
        }

            .signup-section h2 {
                font-weight: bold;
            }

        .signup-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .signup-button {
            background-color: #fca46e;
            border: none;
            padding: 20px;
            border-radius: 10px;
            font-size: 18px;
            font-weight: bold;
            color: white;
            width: 150px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }





        .what-we-do {
            background: #fff;
            padding: 40px 20px;
            text-align: center;
        }

            .what-we-do h3 {
                color: #c35f4a;
            }

            .what-we-do p {
                max-width: 600px;
                margin: auto;
            }

        .features {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-top: 30px;
        }

        .feature {
            text-align: center;
        }

        .footer {
            background-color: #e0dedb;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .footer-left, .footer-right {
            margin: 10px;
        }

            .footer-right button {
                background-color: #fba46f;
                border: none;
                padding: 10px 15px;
                margin: 5px;
                border-radius: 10px;
                color: white;
                font-weight: bold;
            }

        .logo {
            height: 80px;
        }

        .logo-footer {
            height: 50px;
        }
    </style>
    <script>
      
    </script>
</head>
<body>
    <div class="container body-content">

        @RenderBody()


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>

</body>
</html>
