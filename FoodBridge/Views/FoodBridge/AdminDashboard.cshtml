@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Food Bridge Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f7f7f7;
        }

        .header {
            background-color: #f6ab8f;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
        }

        .header-left {
            display: flex;
            align-items: center;
        }

            .header-left img.logo {
                height: 50px;
                margin-right: 10px;
            }

            .header-left .title {
                font-size: 24px;
                font-weight: bold;
                color: white;
            }

        .header-right img.profile {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .container {
            display: flex;
        }

        .sidebar {
            width: 220px;
            background-color: white;
            border-right: 1px solid #ddd;
            padding-top: 20px;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 15px 20px;
                text-decoration: none;
                color: #333;
                border-bottom: 1px solid #eee;
            }

                .sidebar a:hover {
                    background-color: #f0f0f0;
                }

            .sidebar img.icon {
                margin-right: 10px;
                width: 20px;
            }

        .content {
            padding: 30px;
            flex-grow: 1;
        }

        h2 {
            margin-top: 0;
        }

        canvas {
            background-color: #fff;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .chart-container {
            margin-bottom: 40px;
            max-width: 600px;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-left">
            <img src="https://i.imgur.com/VJjP5lw.png" alt="Logo" class="logo" />
            <div class="title">Food Bridge</div>
        </div>
        <div class="header-right">
            <img src="https://i.imgur.com/DEjziFv.png" alt="Profile" class="profile" />
        </div>
    </div>

    <div class="container">
        <div class="sidebar">
            <a href="#"><img class="icon" src="https://img.icons8.com/material-outlined/24/000000/dashboard-layout.png" /> Dashboard</a>
            <a href="#"><img class="icon" src="https://img.icons8.com/ios-filled/50/000000/organic-food.png" /> Food Waste</a>
            <a href="#"><img class="icon" src="https://img.icons8.com/ios-filled/50/000000/soup-plate.png" /> Soup Kitchen</a>
            <a href="#"><img class="icon" src="https://img.icons8.com/ios-filled/50/000000/group-foreground-selected.png" /> Center/Organization</a>
            <a href="#"><img class="icon" src="https://img.icons8.com/ios-filled/50/000000/user-group-man-man.png" /> Recipients Accounts</a>
            <a href="#"><img class="icon" src="https://img.icons8.com/ios-filled/50/000000/businessman.png" /> Donor Accounts</a>
        </div>

        <div class="content">
            <div class="chart-container">
                <h2>Monthly Records</h2>
                <canvas id="lineChart" width="600" height="300"></canvas>
            </div>

            <div class="chart-container">
                <h2>Monthly Recipient/Donors Feedbacks</h2>
                <canvas id="donutChart" width="600" height="300"></canvas>
            </div>
        </div>
    </div>

    <script>
        const lineCtx = document.getElementById('lineChart').getContext('2d');
        new Chart(lineCtx, {
            type: 'line',
            data: {
                labels: ['Week1', 'Week2', 'Week3', 'Week4'],
                datasets: [
                    {
                        label: 'February',
                        data: [4, 5, 6, 5],
                        borderColor: '#FF6384',
                        backgroundColor: 'rgba(255,99,132,0.2)',
                        fill: true
                    },
                    {
                        label: 'March',
                        data: [6, 7, 12, 9],
                        borderColor: '#36A2EB',
                        backgroundColor: 'rgba(54,162,235,0.2)',
                        fill: true
                    },
                    {
                        label: 'April',
                        data: [1, 3, 5, 6],
                        borderColor: '#FFCE56',
                        backgroundColor: 'rgba(255,206,86,0.2)',
                        fill: true
                    }
                ]
            },
            options: {
                responsive: false,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        const donutCtx = document.getElementById('donutChart').getContext('2d');
        new Chart(donutCtx, {
            type: 'doughnut',
            data: {
                labels: ['Happy', 'Sad', 'Angry', 'Wow'],
                datasets: [{
                    label: 'Feedback',
                    data: [1877, 1536, 2246, 2702],
                    backgroundColor: ['#7C83FD', '#FF9999', '#3DD9D6', '#FFB84C'],
                }]
            },
            options: {
                responsive: false,
                plugins: {
                    legend: {
                        position: 'right'
                    }
                },
                cutout: '50%'
            }
        });
    </script>
</body>
</html>
